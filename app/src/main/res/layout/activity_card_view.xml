<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    >

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBackground"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appBackground"
            android:padding="16dp">

            <TextView
                android:id="@+id/card_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/card_mm_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/card_username"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/card_username"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/silver_1" />

            <TextView
                android:id="@+id/card_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_username"
                android:text="Role:"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_esea_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_role"
                android:text="Esea Rank:"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_role_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/card_mm_rank"
                android:layout_toRightOf="@id/card_role"
                android:text="Entry Fragger"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_esea_rank_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/card_role_value"
                android:layout_toRightOf="@id/card_esea_rank"
                android:text="A+"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>